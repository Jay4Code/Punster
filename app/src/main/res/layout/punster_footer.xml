<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_digg"
        style="@style/Interaction"
        android:drawableLeft="@drawable/ic_digg_normal"
        android:drawableStart="@drawable/ic_digg_normal"
        android:text="4.4万" />

    <TextView
        android:id="@+id/tv_bury"
        style="@style/Interaction"
        android:drawableLeft="@drawable/ic_bury_normal"
        android:drawableStart="@drawable/ic_bury_normal"
        android:text="1" />

    <TextView
        android:id="@+id/tv_comment"
        style="@style/Interaction"
        android:drawableLeft="@drawable/ic_comment_normal"
        android:drawableStart="@drawable/ic_comment_normal"
        android:text="3211" />

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_share"
        style="@style/Interaction"
        android:drawableLeft="@drawable/ic_share_comment"
        android:drawableStart="@drawable/ic_share_comment"
        android:text="3.2万" />
</LinearLayout>